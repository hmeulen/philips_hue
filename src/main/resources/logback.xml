<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

	<!-- Send debug messages to System.out -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      	<file> /var/log/hue.log </file>
		<append>true</append>
	  	<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
    		<fileNamePattern>/var/log/history/hue.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
	  		<maxFileSize>1MB</maxFileSize>
    		<maxHistory>7</maxHistory>
			<totalSizeCap>20GB</totalSizeCap>
  		</rollingPolicy>
     	 <encoder>
        	 <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
     	 </encoder>
    </appender>

	<logger name="com.javacodegeeks.examples.logbackexample.beans" level="INFO" additivity="false">
            <appender-ref ref="STDOUT" />
	</logger>

	<logger name="app-file" level="INFO" additivity="false">
            <appender-ref ref="FILE" />
    </logger>

	<!-- By default, the level of the root level is set to DEBUG -->
	<root level="DEBUG">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
